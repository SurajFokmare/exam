#include <stdio.h>
#include <stdlib.h>

int cmp(const void *a, const void *b){ return (*(int*)a) - (*(int*)b); }

int binary_search(int A[], int n, int key){
    int lo = 0, hi = n-1;
    while(lo <= hi){
        int mid = lo + (hi - lo)/2;
        if(A[mid] == key) return mid;
        else if(A[mid] < key) lo = mid + 1;
        else hi = mid - 1;
    }
    return -1;
}

int main(){
    int A[10] = {22,67,31,90,45,56,21,96,100,77};
    int n = 10, key = 56;
    qsort(A, n, sizeof(int), cmp);
    printf("Sorted array: ");
    for(int i=0;i<n;i++) printf("%d ", A[i]);
    printf("\n");
    int idx = binary_search(A, n, key);
    if(idx != -1) printf("Element %d found at sorted-index %d\n", key, idx);
    else printf("Element %d not found\n", key);
    return 0;
}
