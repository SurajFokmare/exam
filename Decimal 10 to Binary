#include <stdio.h>

int main() {
    int num = 10;
    int stack[32], top = -1;
    int n = num;

    if (n == 0) {
        printf("Binary: 0\n");
        return 0;
    }

    while (n > 0) {
        stack[++top] = n % 2;
        n /= 2;
    }

    printf("Decimal %d in binary: ", num);
    while (top >= 0)
        printf("%d", stack[top--]);
    printf("\n");

    return 0;
}
